scalar JSON
scalar Long

type Run @key(fields: "runId") {
    runId: ID!
    sessionId: String
    repository: String
    state: String
    parameters: JSON
    startTime: String
    completeTime: String
    success: Boolean
    exitStatus: Int
    errorReport: String
    duration: Long
    commandLine: String
    engineParameters: EngineParameters
    tasks(taskId: String, state: String, tag: String): [Task]
}

type EngineParameters {
    defaultContainer: String
    launchDir: String
    projectDir: String
    resume: String
    revision: String
    workDir: String
    latest: Boolean
}

# RequestEngineParameters is EngineParameters, but gql requires distinct input and type
input RequestEngineParameters {
    defaultContainer: String
    launchDir: String
    projectDir: String
    resume: String
    revision: String
    workDir: String
    latest: Boolean
}

type Task {
    taskId: ID
    runId: String
    sessionId: String
    name: String
    process: String
    state: String
    tag: String
    container: String
    attempt: Int
    submitTime: String
    startTime: String
    completeTime: String
    exit: Int
    script: String
    workdir: String
    cpus: Int
    memory: Long
    duration: Long
    realtime: Long
    rss: Long
    peakRss: Long
    vmem: Long
    peakVmem: Long
    readBytes: Long
    writeBytes: Long
    run: Run
}

input RunsFilter {
    runId: String
    sessionId: String
    state: String
    repository: String
    analysisId: String
}

input TasksFilter {
    runId: String
    sessionId: String
    state: String
    tag: String
    workDir: String
}

input Page {
    size: Int!
    from: Int!
}

directive @fetch(from : String!) on FIELD_DEFINITION

type Analysis @key(fields: "analysisId") @extends {
    analysisId: ID! @external
    inputForRuns(filter: RunsFilter): [Run]
}

type Workflow @key(fields: "runId") @extends {
    runId: ID! @external
    run: Run
}

enum SortOrder {
    asc,
    desc
}

enum RunSortField {
    runId,
    sessionId,
    state,
    startTime,
    completeTime,
    repository
}

input RunSort {
    fieldName: RunSortField!
    order: SortOrder!
}

enum TaskSortField {
    runId,
    sessionId,
    state,
    startTime,
    completeTime,
    cpus,
    memory
}

input TaskSort {
    fieldName: TaskSortField!
    order: SortOrder!
}

type SearchResultInfo {
    contentCount: String!
    hasNextFrom: String!
    totalHits: String!
}

type RunsSearchResult {
    content: [Run!]
    info: SearchResultInfo!
}

type TasksSearchResult {
    content: [Task!]
    info: SearchResultInfo!
}

type AggregationResult {
    totalHits: String!
}

type RunsResponse {
    runId: ID
}

input RunsRequest {
  workflowUrl: String!
  workflowEngineParams: RequestEngineParameters
  workflowParams: JSON
  workflowType: String
  workflowTypeVersion: String
  tags: JSON
}

type Mutation {
     startRun(request: RunsRequest!): RunsResponse
     cancelRun(runId: ID!): RunsResponse
}

extend type Query {
    runs(filter: RunsFilter, page: Page, sorts: [RunSort!]): RunsSearchResult!
    aggregateRuns(filter: RunsFilter): AggregationResult!
    tasks(filter: TasksFilter, page: Page, sorts: [TaskSort!]): TasksSearchResult!
    aggregateTasks(filter: TasksFilter): AggregationResult!
}
